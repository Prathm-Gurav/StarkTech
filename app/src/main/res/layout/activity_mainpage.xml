<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#232D3F"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_farmer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:text="Farmer Name"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#142645"
        android:elevation="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/edittext_total_bird_count"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_margin="30dp"
                    android:background="@color/white"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:text="0000"
                    android:textColor="#2CB131"
                    android:textStyle="bold"
                    android:editable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="Total Bird Count"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/edittext_totalbw"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_margin="30dp"
                    android:background="@color/white"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:text="0000"
                    android:textColor="#2CB131"
                    android:textStyle="bold"
                    android:editable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="Total B.W"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/edittext_average"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_margin="30dp"
                    android:background="@color/white"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:text="0000"
                    android:textColor="#2CB131"
                    android:textStyle="bold"
                    android:editable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="Average"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:id="@+id/edittext_bc"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_margin="30dp"
                android:background="@color/white"
                android:textSize="40dp"
                android:textAlignment="center"
                android:text="0000"
                android:textColor="#2CB131"
                android:textStyle="bold"
                android:editable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="BC"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:id="@+id/edittext_bw"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_margin="30dp"
                android:background="@color/white"
                android:textSize="40dp"
                android:textAlignment="center"
                android:text="0000"
                android:textColor="#2CB131"
                android:textStyle="bold"
                android:editable="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="BW"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_total_bird_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:visibility="invisible">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_minus_total_bird_count"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="#CF1313"
            app:cardCornerRadius="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                android:text="-"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/edittext_total_bird_count_edit"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_margin="30dp"
                android:background="@color/white"
                android:textSize="40dp"
                android:textAlignment="center"
                android:text="0000"
                android:textColor="#2CB131"
                android:textStyle="bold"
                android:editable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Total Bird Count"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/button_add_total_bird_count"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:backgroundTint="#30B536"
            app:cardCornerRadius="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                android:text="+"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:visibility="invisible">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_minus_average"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="#CF1313"
            app:cardCornerRadius="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                android:text="-"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/edittext_average_edit"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_margin="30dp"
                android:background="@color/white"
                android:textSize="40dp"
                android:textAlignment="center"
                android:text="0000"
                android:textColor="#2CB131"
                android:textStyle="bold"
                android:editable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Average"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/button_add_average"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:backgroundTint="#30B536"
            app:cardCornerRadius="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                android:text="+"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:minWidth="200dp"
            android:layout_height="100dp"
            android:layout_margin="100dp"
            android:text="Edit"
            android:textSize="40dp"
            android:backgroundTint="#142645"/>

        <Button
            android:id="@+id/button_next_batch"
            android:layout_width="wrap_content"
            android:minWidth="200dp"
            android:layout_height="100dp"
            android:layout_margin="100dp"
            android:text="Next Batch"
            android:textSize="40dp"
            android:backgroundTint="#142645"/>

    </LinearLayout>

</LinearLayout>