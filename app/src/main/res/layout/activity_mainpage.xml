<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#232D3F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_farmer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Farmer Name"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#142645"
            android:elevation="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="5dp">
                    <EditText
                        android:backgroundTint="#142645"
                        android:id="@+id/edittext_total_bird_count"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:textSize="40dp"
                        android:textAlignment="center"
                        android:text="0000"
                        android:textColor="#2CB131"
                        android:textStyle="bold"
                        android:editable="false"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Total Bird Count"
                        android:layout_marginStart="20dp"
                        android:layout_margin="10dp"

                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:backgroundTint="#142645"
                        android:id="@+id/edittext_totalbw"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:editable="false"
                        android:text="0000"
                        android:textAlignment="center"
                        android:textColor="#2CB131"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Total B.W"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/edittext_average"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="17dp"
                        android:background="@color/white"
                        android:backgroundTint="#142645"
                        android:editable="false"
                        android:text="00"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textColor="#2CB131"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Average"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:backgroundTint="#232D3F"
                    android:id="@+id/edittext_bc"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:text="0000"
                    android:textColor="#2CB131"
                    android:textStyle="bold"
                    android:editable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="BC"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/edittext_bw"
                    android:backgroundTint="#232D3F"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:text="0000"
                    android:textColor="#2CB131"
                    android:textStyle="bold"
                    android:editable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="BW"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_total_bird_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:id="@+id/button_minus_total_bird_count"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#CF1313"
                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <EditText
                    android:id="@+id/edittext_total_bird_count_edit"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:text="0000"
                    android:textColor="#2CB131"
                    android:textStyle="bold"
                    android:editable="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Total Bird Count"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/button_add_total_bird_count"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#30B536"
                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:id="@+id/button_minus_average"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#CF1313"
                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <EditText
                    android:id="@+id/edittext_average_edit"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:text="0000"
                    android:textColor="#2CB131"
                    android:textStyle="bold"
                    android:editable="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Average"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/button_add_average"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#30B536"
                app:cardCornerRadius="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button_total_bird_count"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_margin="10dp"
                android:layout_height="60dp"
                android:text="Total Bird Count"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:visibility="gone"/>
            <Button
                android:id="@+id/button_average"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_margin="10dp"
                android:layout_height="60dp"
                android:text="Weight"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:visibility="gone"/>

            <Button
                android:id="@+id/button_ok"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_margin="10dp"
                android:layout_height="60dp"
                android:text="Ok"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:visibility="gone"/>

            <Button
                android:id="@+id/button_edit"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_margin="10dp"
                android:layout_height="60dp"
                android:text="Edit"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white" />

            <Button
                android:id="@+id/button_next_batch"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:layout_margin="10dp"
                android:layout_height="60dp"
                android:onClick="gotoNextBatch"
                android:text="Next Batch"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white" />

        </LinearLayout>
        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_margin="10dp"
            android:layout_height="60dp"
            android:text="Cancel"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

</ScrollView>